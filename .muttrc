# Main Smtp stuff
set sendmail="msmtp"
set from="joshkunz@me.com"

# Sort messages into threads
set sort=threads
# Sort threads by reverse date (most recent at the top)
set sort_aux=reverse-date

set editor="vim"
set realname="Josh Kunz"

# Key bindings
bind pager j next-line
bind pager J next-undeleted
bind pager k previous-line
bind pager K previous-undeleted

bind index c collapse-thread

# Advanced Options
#set header_cache=~/.mutt/hcache
#mutt says I shoulden't do this
unset sig_dashes
#skip setting the subject for replies
set fast_reply
#include a copy of the message in replies
set include=yes
#forward messages in a different part
set mime_forward=ask-no
#as per the debian documentation

# Format of the message index
# "Message Number, Status flags, Date, Recipent Name, number of hidden messages, subject
set index_format="%4C %Z %{%b %d} %-15.15L %2M %s"

# Remove non-useful headers
set weed

#set mixmaster="mixmaster-filter"
#Show realnames of aliases
set reverse_alias

# Use the system's cache of certificates
#set ssl_usesystemcerts=yes
#set ssl_ca_certificates_file="/usr/local/share/ca-bundle.crt"

# Force ssl connections
#set ssl_force_tls=yes
set imap_force_ssl=yes
set ssl_use_sslv3=yes

set imap_user="joshkunz@me.com"
set folder="imaps://imap.mail.me.com:993"

mailboxes =INBOX =Sent =Drafts =Save =Archive =Git

## Main Imap Stuff
set connect_timeout=30
set spoolfile=+INBOX
set record=+Sent
set postponed=+Drafts
#set imap_idle=yes
